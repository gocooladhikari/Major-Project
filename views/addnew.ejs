    <div class="container justify-content-center mt-2">
        <div class="content-body">
            <form id="myForm" method="POST" action="/product/new" enctype="multipart/form-data"
            >
                <div class="row">
                    <div class="col-sm-12 col-md-9">
                        <div class="post-blog__card">
                            <h3>Fill up the form</h3>
                            <div class="form-group">
                                <input
                                    type="text"
                                    class="form-control"
                                    id="name"
                                    name="name"
                                    aria-describedby="emailHelp"
                                    placeholder="Name"
                                />
                            </div>

                            <div class="form-group">
                                <input
                                type="text"
                                class="form-control"
                                id="brand"
                                name="brand"
                                aria-describedby="emailHelp"
                                placeholder="Brand"
                            />
                            </div>

                            <div class="row py-4">
                                <div class="col-lg-6 mx-auto">
                        
                                    <!-- Upload image input-->
                                    <div class="input-group mb-3 px-2 py-2 rounded-pill bg-white shadow-sm">
                                        <input id="upload" type="file" name="image" onchange="readURL(this);" class="form-control border-0">
                                        <label id="upload-label" for="upload" class="font-weight-light text-muted">Product Image</label>
                                        <div class="input-group-append">
                                            <label for="upload" class="btn btn-light m-0 rounded-pill px-4"> <i class="fa fa-cloud-upload mr-2 text-muted"></i><small class="text-uppercase font-weight-bold text-muted">Click Here</small></label>
                                        </div>
                                    </div>
                        
                                    <!-- Uploaded image area-->
                                    <!-- <p class="font-italic text-white text-center">The image uploaded will be rendered inside the box below.</p> -->
                                    <div class="image-area mt-4"><img id="imageResult" src="#" alt="" class="img-fluid rounded shadow-sm mx-auto d-block"></div>
                        
                                </div>
                            </div>


                            <div class="text-editor__container">
                                <textarea
                                    name="editor1"
                                    id="editor1"
                                    name="editor1"
                                    rows="10"
                                    cols="80"
                                >
                                        Write the details about product here.
                                    </textarea
                                >
                            </div>
                            
                        </div>
                        <br>
                        <br>
                    </div>

                    <div class="col-sm-12 col-md-3">
                        <div class="post-blog__card publish">
                            <div class="text-center">
                                <p>Information</p>
                                <div class="form-group input-field">
                                    <!-- <div class="col-sm-12 col-md-4 input-field"> -->
                                        <select name="type" class="custom-select custom-select-lg mb-3">
                                            <option selected disabled>
                                                Type
                                            </option>
                                            <option value="mobile">Mobile</option>
                                            <option value="laptop">Laptop</option>
                                            <option value="others">Others</option>
                                        </select>
                                    </div>
                                <!-- </div> -->
                                
                                <div class="form-group">
                                    <label class="sr-only" for="exampleInputAmount"></label>
                                    <div class="input-group">
                                      <div class="input-group-addon">Rs.</div>
                                      <input type="number" name="price" id="exampleInputAmount" class="form-control" placeholder="Price">
                                    </div>
                                </div>
                                <button
                                    type="submit"
                                    id="myButton"
                                    class="custom-btn"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        width="12.006"
                                        height="12.006"
                                        viewBox="0 0 12.006 12.006"
                                    >
                                        <path
                                            id="Icon_material-public"
                                            data-name="Icon material-public"
                                            d="M9,3a6,6,0,1,0,6,6A6.005,6.005,0,0,0,9,3ZM8.4,13.764A4.8,4.8,0,0,1,4.2,9a4.873,4.873,0,0,1,.126-1.075L7.2,10.8v.6a1.2,1.2,0,0,0,1.2,1.2Zm4.142-1.525A1.191,1.191,0,0,0,11.4,11.4h-.6V9.6a.6.6,0,0,0-.6-.6H6.6V7.8H7.8a.6.6,0,0,0,.6-.6V6H9.6a1.2,1.2,0,0,0,1.2-1.2V4.555a4.792,4.792,0,0,1,1.741,7.684Z"
                                            transform="translate(-3 -3)"
                                            fill="#fff"
                                        />
                                    </svg>
                                    Post
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
   